# Child Support Calculator - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================
# ANALYTICS
# ============================================
# Posthog - Free tier: https://posthog.com
# Used for tracking user behavior, button clicks, conversion funnel
POSTHOG_API_KEY=phc_your_key_here
POSTHOG_HOST=https://app.posthog.com

# ============================================
# PAYMENT PROCESSING (Phase 3+)
# ============================================
# Stripe - For billing law firms: https://stripe.com
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_key_here

# ============================================
# EMAIL SERVICE (Phase 2+)
# ============================================
# SendGrid, Mailgun, or AWS SES for sending lead briefs to lawyers
EMAIL_SERVICE_API_KEY=your_email_service_key_here
EMAIL_FROM_ADDRESS=leads@childsupportcalc.app
EMAIL_FROM_NAME=Child Support Calculator

# ============================================
# DATABASE (Phase 2+)
# ============================================
# Supabase (free tier) or Firebase for storing leads
DATABASE_URL=postgresql://user:password@host:5432/database
# Or for Supabase:
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
APP_ENV=development
# Options: development, staging, production

# ============================================
# APP CONFIGURATION
# ============================================
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:3000
# Production: https://api.childsupportcalc.app

# ============================================
# FEATURE FLAGS (Phase 1)
# ============================================
# Enable/disable features during testing
ENABLE_LAWYER_LEADS=true
ENABLE_COMPLEXITY_TRIGGERS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false

# ============================================
# RATE LIMITING (Phase 3+)
# ============================================
# Prevent abuse
MAX_CALCULATIONS_PER_USER=100
MAX_LEADS_PER_USER=5

# ============================================
# LEGAL/COMPLIANCE
# ============================================
# Privacy policy and terms URLs
PRIVACY_POLICY_URL=https://childsupportcalc.app/privacy
TERMS_OF_SERVICE_URL=https://childsupportcalc.app/terms
